import fetchworks from "../../lib/fetchWorks";
const works = await fetchworks();
export const prerender = true;
export async function getStaticPaths() {
    const works = await fetchworks();
    return works.map((work) => ({
        params: {
            slug: work.data.slug,
        },
        props: {
            workData: work.data
        }
    }))
}
